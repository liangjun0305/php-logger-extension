 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>put</function> example</title>
    <para>
      Simple example of registering a value with the put method.
    </para>
    <programlisting role="php">
<![CDATA[
<?php

// MDC variables can be displayed on the log file using the %X formater
// log4j.appender.Appender1.layout.ConversionPattern=%p %t ID="%X{request_id}" %c - %m%n

LoggerMDC::put("request_id", uniqid()); // register request_id on the context

$log = LoggerManager::getLogger("main");
$log->debug('starting main program'); // this message will log all MDC variables present on layout configuration

?>
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
Example of output on the log file...
DEBUG 0x000002ec ID="51ec4eb10a451" main - starting main program
]]>
    </screen>
   </example>
  </para>
 </refsect1>
