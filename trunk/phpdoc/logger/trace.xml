 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>trace</function> example</title>
    <para>
      Simple example of loging a message with the trace method.
    </para>
    <programlisting role="php">
<![CDATA[
<?php
$log = LoggerManager::getLogger(__METHOD__);
$log->trace('before foo');
$r = foo();
$log->debug('foo returned '.$r);
?>
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
176 [main] TRACE - before foo.
177 [main] DEBUG - foo returned 1.
]]>
    </screen>
   </example>
  </para>
 </refsect1>
